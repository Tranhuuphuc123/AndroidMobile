<?xml version="1.0" encoding="utf-8"?>
<!--/*tiềm hiểu về các lớp iNtent: Implicitly vàExplicitly Intent*/-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImplicitlyAndExplicitlyIntent"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
        android:id="@+id/btn_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/rectangle"
        android:text="show web page"
        android:textSize="20dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/rectangle"
        android:text="send message"
        android:textSize="20dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/btn_show"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/rectangle"
        android:text="call someone"
        android:textSize="20dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/btn_send"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/rectangle"
        android:text="view contact"
        android:textSize="20dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/btn_call"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_galary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@drawable/rectangle"
        android:text="Open Galary"
        android:textSize="20dp"
        android:textAllCaps="true"
        app:layout_constraintTop_toBottomOf="@+id/btn_view"
        android:layout_marginTop="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>