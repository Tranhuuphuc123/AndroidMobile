<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginStart="10dp">

    <Button
        android:id="@+id/btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red"
        android:textSize="30dp"
        android:background="@color/red"/>


    <Button
        android:id="@+id/btn_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:textSize="30dp"
        android:background="@color/orange"
        android:layout_below="@+id/btn_red"
        android:layout_toEndOf="@+id/btn_red"/>

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yelo"
        android:textSize="30dp"
        android:background="@color/yellow"
        android:layout_below="@+id/btn_orange"
        android:layout_toEndOf="@+id/btn_orange"/>

    <Button
        android:id="@+id/btn_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        android:textSize="30dp"
        android:background="@color/green"
        android:layout_below="@+id/btn_yellow"
        android:layout_toStartOf="@+id/btn_yellow"/>


    <Button
        android:id="@+id/btn_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:textSize="30dp"
        android:background="@color/pink"
        android:layout_below="@+id/btn_green"
        android:layout_toStartOf="@+id/btn_green"/>




</RelativeLayout>