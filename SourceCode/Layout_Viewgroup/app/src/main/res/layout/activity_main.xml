<?xml version="1.0" encoding="utf-8"?>
<!--code giao diện layout: dùng viewgroup(LinearLayout)-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    android:padding="@dimen/padding"
    android:gravity="center"
    android:layout_height="@dimen/height_layout">

    <!--dùng viewgroup trong một viewgroup-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/margin"
        android:visibility="visible"
        android:layout_height="wrap_content">
        <!--tạo nút button viewgroup con-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_name"/>
    </LinearLayout>

    <!--tạo nút button ở viewgroup tổng cha-->
    <Button
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="@string/click_name"/>


</LinearLayout>