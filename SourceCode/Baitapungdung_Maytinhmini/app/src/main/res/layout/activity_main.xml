<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp">

   <LinearLayout
       android:id="@+id/linear_edit"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       tools:ignore="MissingConstraints"
       android:orientation="horizontal"
       android:weightSum="100"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="10dp">

       <!--Lứu ý numeric là thuộc tính dùng để thiết lặp giá trị cho phép nhập mặc định-->
       <EditText
           android:id="@+id/edit_one"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="45"
           android:hint="values one"
           android:textSize="18dp"
           android:numeric="integer"/>

       <EditText
           android:id="@+id/edit_two"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="45"
           android:hint="values two"
           android:textSize="18dp"
           android:layout_marginLeft="5dp"
           android:numeric="integer"/>

   </LinearLayout>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_edit">

        <TableRow android:weightSum="100">
            <Button
                android:id="@+id/btn_add"
                android:layout_weight="20"
                android:background="@drawable/rectangle"
                android:text="+"
                android:textSize="20dp"
                android:textColor="@color/green"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_weight="20"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rectangle"
                android:text="-"
                android:textSize="20dp"
                android:textColor="@color/green"/>

            <Button
                android:id="@+id/btn_core"
                android:layout_weight="20"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rectangle"
                android:text="*"
                android:textSize="20dp"
                android:textColor="@color/green"/>

            <Button
                android:id="@+id/btn_divide"
                android:layout_weight="20"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rectangle"
                android:text="/"
                android:textSize="20dp"
                android:textColor="@color/green"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/table_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:background="@color/yellow"
        android:text="Result"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:src="@drawable/icon_background"/>

</androidx.constraintlayout.widget.ConstraintLayout>